<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/btn_dialog_pay_alpay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="{icon-ali-pay}"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="50sp" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/btn_dialog_pay_wechat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="{fa-weixin}"
            android:textColor="#04b00f"
            android:textSize="50sp" />
    </android.support.v7.widget.LinearLayoutCompat>
    
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_dialog_pay_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/holo_orange_dark"
        android:gravity="center"
        android:text="取消支付"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
</LinearLayout>